{
  "name": "Terraform Development Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  
  "secrets": {
    "ARM_SUBSCRIPTION_ID": {
      "description": "Azure Subscription ID for the lab environment"
    },
    "ARM_TENANT_ID": {
      "description": "Azure Tenant ID for authentication"
    },
    "ARM_CLIENT_ID": {
      "description": "Azure Service Principal Client ID"
    },
    "ARM_CLIENT_SECRET": {
      "description": "Azure Service Principal Client Secret"
    }
  },
  
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform"
      ]
    }
  },
  
  "postCreateCommand": {
    "gitpull": "git pull origin main",
    "azcli": "az login --service-principal --username $ARM_CLIENT_ID --password $ARM_CLIENT_SECRET --tenant $ARM_TENANT_ID",
    "setup-complete": "echo 'âœ… Lab environment configured successfully. You can now begin the Dynamic Expressions lab!'"
  },
  
  "remoteUser": "codespace"
}
